<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/myActionBar</item>
        <item name="preferenceTheme">@style/PreferenceStyle</item>
    </style>

    <!-- Light application theme. -->
    <style name="LightTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/cyanDark</item>
        <item name="colorPrimaryDark">@color/cyanPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="primaryTextColor">#808080</item>
        <item name="secondaryTextColor">#808080</item>
        <item name="backgroundColor">#fcfcfc</item>
        <item name="iconColor">@color/cyanDark</item>
        <item name="mainColor">@color/cyanDark</item>
        <item name="separatorColor">@color/cyanDark</item>
        <item name="cardViewBackgroundColor">#FFF</item>
        <item name="detailBackgroundColor">#f2f0f0</item>
        <item name="android:textColorHint">#808080</item>
        <item name="settingsColor">#000</item>

    </style>

    <!-- Dak application theme. -->
    <style name="DarkTheme" parent="BaseTheme">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorControlActivated">@color/colorLightGreen</item>
        <item name="colorControlNormal">#FFF</item>
        <item name="primaryTextColor">#fff</item>
        <item name="secondaryTextColor">@color/colorLightGrey</item>
        <item name="backgroundColor">#424242</item>
        <item name="separatorColor">@color/colorLightGreen</item>
        <item name="iconColor">@color/cyanIconColor</item>
        <item name="cardViewBackgroundColor">#424242</item>
        <item name="detailBackgroundColor">#212121</item>
        <item name="android:textColorHint">#FFF</item>
        <item name="settingsColor">@color/colorLightGreen</item>
    </style>

    <style name="imageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">?attr/iconColor</item>
    </style>

    <style name="horizontalLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="textInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="cardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardBackgroundColor">?attr/cardViewBackgroundColor</item>
    </style>

    <style name="textViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Primary.TextView" parent="textViewStyle">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textSize">@dimen/text__size_18_sp</item>
    </style>

    <style name="Secondary.TextView" parent="textViewStyle">
        <item name="android:textColor">?attr/secondaryTextColor</item>
        <item name="android:textSize">@dimen/text_size_16_sp</item>
    </style>

    <style name="detailIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">?attr/iconColor</item>
    </style>

    <style name="myActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp
        </item> <!-- Default for portrait is 20sp and for landscape 14sp-->
    </style>

    <style name="listItemTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text__size_20_sp</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="PreferenceStyle" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceCategoryStyle">@style/CustomPreferenceCategory</item>
    </style>

    <style name="CustomPreferenceCategory" parent="@style/Preference.Category">
        <item name="android:layout">@layout/settings_textview</item>
    </style>

    <style name="CustomPreferenceCategoryText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">?attr/settingsColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
</resources>
